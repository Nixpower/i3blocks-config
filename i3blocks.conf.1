[iface]
label=Private IP:
instance=wlp0s20u6
color=#1ED2FA
interval=10
separator=false

[External IP]
label=Public IP:
command=curl -6 icanhazip.com
color=#1EFA88
separator=false
interval=6000

#[wifi]
#instance=wlp3s0
#interval=10

[bandwidth]
instance=wlp0s20u6
color=#F538F2
interval=5

[disk]
label=Disk:
color=#996600
instance=/
separator=false
interval=30

[disk-io]
command=~/i3blocks-config/disk-io -w 2 -M -P 0 -L 'Read: ' -s Write:
interval=persist
color=#A8E87D
markup=pango
#instance=/^sda/

[memory]
label=RAM:
color=#E87625
separator=false
interval=30

[memory]
label=Swap:
color=#9999FF
instance=swap
interval=30

[cpu_usage]
label=CPU:
interval=10
color=#FFFF00
separator=false
#min_width=CPU: 100.00%

[load_average]
label=Load:
interval=10
color=#7FC269
